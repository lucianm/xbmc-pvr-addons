            <textcolor>white</textcolor>
            <shadowcolor>black</shadowcolor>
          </control>
          <control type="renderaddon" id ="9">
            <posx>5</posx>
            <posy>50</posy>
            <width>780</width>
            <height>515</height>
          </control>
	    </control>
      </control>
	</control>
    <include>Clock</include>
  </controls>
</window>
